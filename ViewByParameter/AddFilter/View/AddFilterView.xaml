<ui:FluentWindow 
    x:Class="ViewByParameter.AddFilter.View.AddFilterView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ui="http://Kapibara/xaml"
    mc:Ignorable="d"
    WindowStartupLocation="CenterScreen"
    Height="650"
    Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="100" />
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        
        <ui:TitleBar
            Grid.Row="0"
            Title="Add a filter"/>
        
        <ui:CardControl Grid.Row="1"
            VerticalAlignment="Top"
            Margin="10"
            Icon="{ui:SymbolIcon FilterSync24}">
            <ui:TextBox
                HorizontalAlignment="Left"
                PlaceholderText="Введите наименование фильтра..."
                Text="{Binding FilterByName, UpdateSourceTrigger=PropertyChanged}" />
            
        </ui:CardControl>
        <ui:Card Grid.Row="2" Margin="10,5">
            <ListBox ItemsSource="{Binding FiltersFromProject}"
                     SelectedItem="{Binding FilterFromProject}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <CheckBox
                                Grid.Column="0"
                                IsChecked="{Binding IsChecked}"/>
                                    
                            <TextBlock
                                Grid.Column="1"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Text="{Binding Name}" />
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </ui:Card>
        <StackPanel 
            Grid.Row="3"
            Orientation="Horizontal"
            FlowDirection="RightToLeft">
            <Separator Width="20" Visibility="Hidden"/>
            <ui:Button
                       Appearance="Primary"
                       FontSize="10"
                       Content="Отменить выбор"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Command="{Binding CancelSelectionCommand}" />
            
            <ui:Button 
                Appearance="Primary"
                FontSize="10"
                Content="Выбрать все"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Command="{Binding SelectAllCommand}" />
            
        </StackPanel>
        
        <ui:Button Grid.Row="4"
                   Appearance="Primary"
                   Content="Добавить"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Command="{Binding ConfirmSelectionCommand}" />
    </Grid>
</ui:FluentWindow>

<ui:FluentWindow
    x:Class="ViewByParameter.Views.ViewByParameterView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ui="http://Kapibara/xaml"
    mc:Ignorable="d"
    WindowStartupLocation="CenterScreen"
    Height="800"
    Width="1300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        
        <ui:TitleBar
            Grid.Row="0"
            Title="View by parameter"/>
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <ScrollViewer Grid.Column="0">
                <StackPanel>
                    <ui:Card Margin="5">
                        <StackPanel>
                            <ui:TextBlock
                                Text="Выбор вида"
                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                TextWrapping="WrapWithOverflow"
                                FontTypography="BodyStrong"/>
                            <ui:TextBlock
                                Appearance="Secondary"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                Text="Выбор плана или 3D вида"
                                TextWrapping="WrapWithOverflow" />
                            <Separator Visibility="Hidden" Height="5"/>
                            <ComboBox
                                ItemsSource="{Binding ViewOptions}"
                                SelectedItem="{Binding ViewOption,Mode=TwoWay}" 
                                DisplayMemberPath="Name"/>
                        </StackPanel>
                    </ui:Card>
                    
                    <ui:Card Margin="5">
                        <StackPanel>
                            <ui:TextBlock
                                Text="Выбор типа вида"
                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                TextWrapping="WrapWithOverflow"
                                FontTypography="BodyStrong"/>
                            <ui:TextBlock
                                Appearance="Secondary"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                Text="Базовый тип для создания видов"
                                TextWrapping="WrapWithOverflow" />
                            <Separator Visibility="Hidden" Height="5"/>
                            <ComboBox
                                ItemsSource="{Binding ViewOption.Types}"
                                SelectedItem="{Binding ViewOption.Type,Mode=TwoWay}" 
                                DisplayMemberPath="Name"/>
                        </StackPanel>
                    </ui:Card>
                    
                    <ui:Card Margin="5">
                        <StackPanel>
                            <ui:TextBlock
                                Text="Выбор параметра"
                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                TextWrapping="WrapWithOverflow"
                                FontTypography="BodyStrong"/>
                            <ui:TextBlock
                                Appearance="Secondary"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                Text="Параметр для генерации видов"
                                TextWrapping="WrapWithOverflow" />
                            <Separator Visibility="Hidden" Height="5"/>
                            <ComboBox
                                ItemsSource="{Binding ProjectParameters}"
                                SelectedItem="{Binding ProjectParameter,Mode=TwoWay}" />
                        </StackPanel>
                    </ui:Card>
                    
                    <ui:Card Margin="5">
                        <StackPanel>
                            <ui:TextBlock
                                Text="Настройка фильтра"
                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                TextWrapping="WrapWithOverflow"
                                FontTypography="BodyStrong"/>
                            <ui:TextBlock
                                Appearance="Secondary"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                Text="Правило при создании фильтра"
                                TextWrapping="WrapWithOverflow" />
                            <Separator Visibility="Hidden" Height="5"/>
                            <ComboBox
                                ItemsSource="{Binding FilterOptions}"
                                SelectedItem="{Binding FilterOption,Mode=TwoWay}" 
                                DisplayMemberPath="Name"/>
                        </StackPanel>
                    </ui:Card>
                </StackPanel>
            </ScrollViewer>
            
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/> 
                    <RowDefinition Height="*"/> 
                </Grid.RowDefinitions>
                
                <ui:Card Grid.Row="0"
                         Margin="5"
                         VerticalAlignment="Top">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"/> 
                            <RowDefinition Height="*"/> 
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid Margin="13,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30"/> 
                                    <ColumnDefinition Width="*"/> 
                                    <ColumnDefinition Width="150"/> 
                                    <ColumnDefinition Width="80"/> 
                                </Grid.ColumnDefinitions>
                                <CheckBox Grid.Column="0"
                                          IsChecked="{Binding IsCheckedAll}" />
                                <ui:TextBlock Grid.Column="1"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Appearance="Secondary"
                                              Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                              Text="{Binding ProjectParameter}"
                                              TextWrapping="WrapWithOverflow" />
                                <ui:TextBlock Grid.Column="2"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Appearance="Secondary"
                                              Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                              Text="Кол-во элементов"
                                              TextWrapping="WrapWithOverflow" />
                                <ui:TextBlock Grid.Column="3"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Appearance="Secondary"
                                              Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                              Text="Видимость фильтра"
                                              TextWrapping="WrapWithOverflow" />
                        </Grid>
                    </Grid>
                    
                    <ListBox 
                        Grid.Row="1"
                        HorizontalAlignment="Stretch"
                        ItemsSource="{Binding ElementsByParameters}"
                        SelectedItem="{Binding ElementsByParameter}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="30"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="100"/>
                                        </Grid.ColumnDefinitions>

                                        <CheckBox
                                            Grid.Column="0"
                                            IsChecked="{Binding IsChecked}"/>
                                        
                                        <TextBlock
                                            Grid.Column="1"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Text="{Binding Value}" />
                
                                        <TextBlock
                                            Grid.Column="2"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Text="{Binding Count}"/>
                                        
                                        <CheckBox
                                            Grid.Column="3"
                                            HorizontalAlignment="Center"
                                            IsChecked="{Binding FilterVisible}"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                    </ListBox>
                    </Grid>
                </ui:Card>

                <ui:Card Grid.Row="1"
                         Margin="5"
                         VerticalAlignment="Top">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"/> 
                            <RowDefinition Height="*"/> 
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid 
                                Margin="13,0,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="*"/> 
                                    <ColumnDefinition Width="50"/> 
                                    <ColumnDefinition Width="50"/> 
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="150"/>
                                </Grid.ColumnDefinitions>
                                <CheckBox Grid.Column="0"
                                          IsChecked="{Binding IsCheckedAllFilters}" />
                                
                                <ui:TextBlock Grid.Column="1"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Appearance="Secondary"
                                              Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                              Text="Наименование фильтра"
                                              TextWrapping="WrapWithOverflow" />
                                
                                <ui:Button Grid.Column="2"
                                           Appearance="Success"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontSize="24"
                                           Icon="{ui:SymbolIcon AddSquareMultiple20}"
                                           Command="{Binding AddFilterCommand}" />
                                
                                <ui:Button Grid.Column="3"
                                           Appearance="Caution"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontSize="24"
                                           Icon="{ui:SymbolIcon ArrowSyncDismiss20}"
                                           Command="{Binding DeleteFilterCommand}" />
                                
                                <ui:TextBlock Grid.Column="4"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Appearance="Secondary"
                                              Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                              Text="Включить фильтр"
                                              TextWrapping="WrapWithOverflow" />
                                <ui:TextBlock Grid.Column="5"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Appearance="Secondary"
                                              Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                              Text="Видимость фильтра"
                                              TextWrapping="WrapWithOverflow" />
                            </Grid>
                        </Grid>
                    
                    <ListBox Grid.Row="1" 
                        ItemsSource="{Binding FiltersFromProject}"
                        SelectedItem="{Binding FilterFromProject}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="30"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="100"/> 
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="150"/>
                                    </Grid.ColumnDefinitions>

                                    <CheckBox
                                        Grid.Column="0"
                                        IsChecked="{Binding IsChecked}"/>
                                    
                                    <TextBlock
                                        Grid.Column="1"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Text="{Binding Name}" />
                                    <CheckBox
                                        Grid.Column="3"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        IsChecked="{Binding IsEnabled}"/>
                                    <CheckBox
                                        Grid.Column="4"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        IsChecked="{Binding IsVisible}"/>
                                    
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    </Grid>
                </ui:Card>
            </Grid>
        </Grid>
        
        <ui:Button Grid.Row="2"
                   Appearance="Primary"
                   Content="Execute"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Command="{Binding ExecuteCommand}" />
    </Grid>
</ui:FluentWindow>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Color x:Key="PrimaryColor">Gray</Color>
    <Color x:Key="SecondaryColor">Gold</Color>
    <Color x:Key="IconColor">#2E2E2E</Color>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
    <SolidColorBrush x:Key="IconBrush" Color="{StaticResource IconColor}" />
    <SolidColorBrush x:Key="ForegroundBrush" Color="{StaticResource SecondaryColor}" />
    
    <LinearGradientBrush x:Key="MainWindowGradient" StartPoint="0,5" EndPoint="1,4">
        <GradientStop Color="{StaticResource PrimaryColor}" Offset="0" />
        <GradientStop Color="{StaticResource SecondaryColor}" Offset="1.2" />
    </LinearGradientBrush>
    
</ResourceDictionary>
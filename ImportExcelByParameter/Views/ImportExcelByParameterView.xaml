<ui:FluentWindow
     x:Class="ImportExcelByParameter.Views.ImportExcelByParameterView"
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
     xmlns:ui="http://Kapibara/xaml"
     xmlns:wpf="clr-namespace:FluentIcons.Wpf;assembly=FluentIcons.Wpf"
     mc:Ignorable="d"
     ResizeMode="NoResize"
     WindowStartupLocation="CenterScreen"
     Height="500"
     Width="500">
     <Grid>
          <Grid.RowDefinitions>
               <RowDefinition Height="40" />
               <RowDefinition Height="*" />
               <RowDefinition Height="*" />
               <RowDefinition Height="*" />
               <RowDefinition Height="*" />
               <RowDefinition Height="50" />
          </Grid.RowDefinitions>
          <ui:TitleBar Grid.Row="0" Title="Import excel"/>
          <ui:Card Grid.Row="1" Margin="10, 0">
               <StackPanel>
                    <Grid>
                         <Grid.ColumnDefinitions>
                              <ColumnDefinition Width="Auto"/>
                              <ColumnDefinition Width="150"/>
                         </Grid.ColumnDefinitions>
                         <wpf:FluentIcon Grid.Column="0" Icon="DocumentTable"
                                         IconVariant="Regular"
                                         FontSize = "24"
                                         Width="32" 
                                         Height="32"/>
                         <ui:Button Grid.Column="1" 
                                    Appearance="Caution"
                                    Content="Выбрать путь"
                                    HorizontalAlignment="Left"
                                    Command="{Binding SelectPathCommand}"/>
                    </Grid>
                    <TextBlock Text="{Binding PathExcel}"/>
               </StackPanel>
          </ui:Card>
          
          <ui:Card Grid.Row="2" Margin="10, 0">
               <StackPanel>
                    <TextBlock Text="Выбор листа и номера строки"/>
                    <Grid>
                         <Grid.ColumnDefinitions>
                              <ColumnDefinition Width="*"/>
                              <ColumnDefinition Width="125"/>
                         </Grid.ColumnDefinitions>
                         <ComboBox Grid.Column="0" 
                                   Margin="0, 0,10,0"
                                   ItemsSource="{Binding Sheets}"
                                   SelectedItem="{Binding Sheet,Mode=TwoWay}"/>
                         <ui:NumberBox Grid.Column="1"
                                       PlaceholderText="Номер"
                                       MaxDecimalPlaces="0"
                                       Value="{Binding RowNumber}"/>
                    </Grid>
               </StackPanel>
          </ui:Card>
          
          <ui:Card Grid.Row="3" Margin="10, 0">
               <StackPanel>
                    <TextBlock Text="Выбор категории"/>
                    <ComboBox 
                         ItemsSource="{Binding Categories}"
                         SelectedItem="{Binding SelectedCategory,Mode=TwoWay}"/>
               </StackPanel>
          </ui:Card>
          
          <ui:Card Grid.Row="4" Margin="10, 0">
               <StackPanel>
                    <TextBlock Text="Выбор параметра"/>
                    <ComboBox 
                         ItemsSource="{Binding Parameters, Mode=TwoWay}"
                         SelectedItem="{Binding Parameter}"/>
               </StackPanel>
          </ui:Card>
          
          <ui:Button Grid.Row="5"
                     Appearance="Primary"
                     Content="Execute"
                     HorizontalAlignment="Center"
                     Command="{Binding StartCommand}"
                     Icon="{ui:SymbolIcon DocumentTableTruck24}"/>
          
     </Grid>
</ui:FluentWindow>
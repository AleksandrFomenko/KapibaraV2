<ui:FluentWindow
    x:Class="Axes.Views.AxesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ui="http://Kapibara/xaml"
    xmlns:converters="clr-namespace:Axes.Views.Converters"
    mc:Ignorable="d"
    WindowStartupLocation="CenterScreen"
    SizeToContent="WidthAndHeight"
    ResizeMode="NoResize"
    Height="{Binding SelectedChoice.WindowHeight, Mode=OneWay}"
    Width="{Binding  SelectedChoice.WindowWidth,  Mode=OneWay}"
    MinWidth="{Binding SelectedChoice.WindowWidth, Mode=OneWay}"
    MaxWidth="{Binding SelectedChoice.WindowWidth, Mode=OneWay}"
    MinHeight="{Binding SelectedChoice.WindowHeight, Mode=OneWay}"
    MaxHeight="{Binding SelectedChoice.WindowHeight, Mode=OneWay}">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolConverter" />
        <converters:EnumDescriptionConverter x:Key="EnumDescriptionConverter" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <ui:TitleBar
            Grid.Row="0"
            Title="Axes"
            ShowMaximize="False"
            ShowMinimize="False" />

        <Grid Grid.Row="1">
            <ComboBox ItemsSource="{Binding Choices}"
                      SelectedItem="{Binding SelectedChoice}"
                      Margin="10,0"
                      DisplayMemberPath="DisplayName" 
                      VerticalAlignment="Center"/>
        </Grid>

        <ui:Card
            Grid.Row="2"
            Margin="10,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Visibility="{Binding SelectedChoice.VisibleAxes, 
            Converter={StaticResource BoolConverter}}">
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition />
                    <RowDefinition Height="150"/>
                    <RowDefinition />
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                
                <Grid >
                    <ComboBox DockPanel.Dock="Top"
                              ItemsSource="{Binding Options}"
                              SelectedItem="{Binding SelectedOption}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Converter={StaticResource EnumDescriptionConverter}}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </Grid>
                
                <CheckBox Grid.Row="1" 
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    IsChecked="{Binding Top}"/>
                
                <Grid Grid.Row="2">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        
                        <CheckBox 
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            IsChecked="{Binding Left}"/>
                        
                        <Grid Grid.Column="1">
                            <Grid.Background>
                                <ImageBrush ImageSource="/Axes;component/Resources/BackgroundAxes.png"
                                            Stretch="Uniform" />
                            </Grid.Background>
                        </Grid>
                        
                        <CheckBox Grid.Column="2" 
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            IsChecked="{Binding Right}"/>
                    </Grid>
                </Grid>
                
                <CheckBox Grid.Row="3" 
                          HorizontalAlignment="Center"
                          VerticalAlignment="Top"
                          IsChecked="{Binding Bottom}"/>
                
                <Grid Grid.Row="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <ui:Button
                        Appearance="Primary"
                        Content="2D"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Command="{Binding To2DCommand}" />
                    <ui:Button Grid.Column="1"
                        Appearance="Primary"
                        Content="3D"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Command="{Binding To3DCommand}" />
                </Grid>
            </Grid>
            
        </ui:Card>

        <ui:Card
            Grid.Row="2"
            Margin="10,0"
            Visibility="{Binding SelectedChoice.VisibleStartEnd, 
            Converter={StaticResource BoolConverter}}">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition Height="40" />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <ui:TextBlock
                        Text="{Binding HeaderSelections}"
                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                        TextWrapping="WrapWithOverflow"
                        FontTypography="BodyStrong" />
                    <ui:TextBlock
                        Appearance="Secondary"
                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                        Text="{Binding HeaderSelectionsDescription}"
                        TextWrapping="WrapWithOverflow" />
                    <Separator Visibility="Hidden" Height="5" />
                    <ComboBox
                        ItemsSource="{Binding Options}"
                        SelectedItem="{Binding Option}"
                        DisplayMemberPath="Name" />
                </StackPanel>


                <StackPanel Grid.Row="1">
                    <ui:TextBlock
                        Appearance="Secondary"
                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                        Text="{Binding SettingsDescription}"
                        TextWrapping="WrapWithOverflow" />
                    <Separator Visibility="Hidden" Height="5" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <ui:TextBlock
                                Grid.Column="0"
                                Appearance="Secondary"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Text="{Binding StartLabel}" />
                            <CheckBox
                                Grid.Column="1"
                                IsChecked="{Binding BeginningIsChecked}" />
                        </Grid>

                        <Grid Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <ui:TextBlock
                                Grid.Column="0"
                                Appearance="Secondary"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Text="{Binding EndLabel}" />
                            <CheckBox
                                Grid.Column="1"
                                IsChecked="{Binding EndIsChecked}" />
                        </Grid>
                    </Grid>
                </StackPanel>


                <ui:Button
                    Grid.Row="2"
                    Appearance="Primary"
                    Content="Execute"
                    HorizontalAlignment="Center"
                    Command="{Binding ExecuteCommand}" />

            </Grid>
        </ui:Card>
    </Grid>
</ui:FluentWindow>
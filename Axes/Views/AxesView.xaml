<ui:FluentWindow
    x:Class="Axes.Views.AxesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ui="http://Kapibara/xaml"
    mc:Ignorable="d"
    WindowStartupLocation="CenterScreen"
    SizeToContent="WidthAndHeight"
    ResizeMode="NoResize"
    Height="{Binding SelectedChoice.WindowHeight, Mode=OneWay}"
    Width="{Binding  SelectedChoice.WindowWidth,  Mode=OneWay}"
    MinWidth="{Binding SelectedChoice.WindowWidth}"
    MaxWidth="{Binding SelectedChoice.WindowWidth}"
    MinHeight="{Binding SelectedChoice.WindowHeight}"
    MaxHeight="{Binding SelectedChoice.WindowHeight}">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolConverter" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <ui:TitleBar
            Grid.Row="0"
            Title="Axes"
            ShowMaximize="False"
            ShowMinimize="False" />

        <Grid Grid.Row="1">
            <ComboBox ItemsSource="{Binding Choices}"
                      SelectedItem="{Binding SelectedChoice}"
                      Margin="10,0"
                      DisplayMemberPath="DisplayName" 
                      VerticalAlignment="Center"/>
        </Grid>

        <ui:Card
            Grid.Row="2"
            Margin="10,0"
            Visibility="{Binding SelectedChoice.VisibleAxes, 
            Converter={StaticResource BoolConverter}}">
            <Grid Width="150" Height="150"
                  RenderOptions.BitmapScalingMode="NearestNeighbor"
                  SnapsToDevicePixels="True">
                <Grid.Background>
                    <ImageBrush ImageSource="/Axes;component/Resources/BackgroundAxes.png"
                                Stretch="Uniform" />
                </Grid.Background>
            </Grid>
        </ui:Card>

        <ui:Card
            Grid.Row="2"
            Margin="10,0"
            Visibility="{Binding SelectedChoice.VisibleStartEnd, 
            Converter={StaticResource BoolConverter}}">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition Height="40" />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <ui:TextBlock
                        Text="{Binding HeaderSelections}"
                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                        TextWrapping="WrapWithOverflow"
                        FontTypography="BodyStrong" />
                    <ui:TextBlock
                        Appearance="Secondary"
                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                        Text="{Binding HeaderSelectionsDescription}"
                        TextWrapping="WrapWithOverflow" />
                    <Separator Visibility="Hidden" Height="5" />
                    <ComboBox
                        ItemsSource="{Binding Options}"
                        SelectedItem="{Binding Option}"
                        DisplayMemberPath="Name" />
                </StackPanel>


                <StackPanel Grid.Row="1">
                    <ui:TextBlock
                        Appearance="Secondary"
                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                        Text="{Binding SettingsDescription}"
                        TextWrapping="WrapWithOverflow" />
                    <Separator Visibility="Hidden" Height="5" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <ui:TextBlock
                                Grid.Column="0"
                                Appearance="Secondary"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Text="{Binding StartLabel}" />
                            <CheckBox
                                Grid.Column="1"
                                IsChecked="{Binding BeginningIsChecked}" />
                        </Grid>

                        <Grid Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <ui:TextBlock
                                Grid.Column="0"
                                Appearance="Secondary"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Text="{Binding EndLabel}" />
                            <CheckBox
                                Grid.Column="1"
                                IsChecked="{Binding EndIsChecked}" />
                        </Grid>
                    </Grid>
                </StackPanel>


                <ui:Button
                    Grid.Row="2"
                    Appearance="Primary"
                    Content="Execute"
                    HorizontalAlignment="Center"
                    Command="{Binding ExecuteCommand}" />

            </Grid>
        </ui:Card>
    </Grid>
</ui:FluentWindow>
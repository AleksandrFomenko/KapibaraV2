<ui:FluentWindow
    x:Class="ActiveView.Views.ActiveViewView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ui="http://Kapibara/xaml"
    xmlns:converters="clr-namespace:ActiveView.Views.Converters"
    mc:Ignorable="d"
    WindowStartupLocation="CenterScreen"
    Height="400"
    Width="300">
    <ui:FluentWindow.Resources>
        <converters:BoolVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </ui:FluentWindow.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <ui:TitleBar Grid.Row="0" Title="Active View"/>
        <ui:Card Grid.Row="1" Margin="10, 0">
            <StackPanel>
                <TextBlock Text="{Binding HeadingParameterSelection}"/>
                <Separator Visibility = "Hidden" Height="10"/>
                <ComboBox
                    ItemsSource="{Binding Parameters}"
                    SelectedItem="{Binding Parameter}"/>
            </StackPanel>
        </ui:Card>
        
        <ui:Card Grid.Row="2" Margin="10, 0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock
                    Grid.Row="0"
                    Text="{Binding HeadingValue}"/>
                <TextBox 
                    Grid.Row="1"
                    Text="{Binding Value}"
                    Visibility="{Binding IsTextBoxVisible,
                    Converter={StaticResource BoolToVisibilityConverter}}" />
                <ui:ToggleSwitch 
                    Grid.Row="1"
                    IsChecked="{Binding BoolValue}"
                    Visibility="{Binding IsToggleVisible,
                    Converter={StaticResource BoolToVisibilityConverter}}" />
            </Grid>
        </ui:Card>
        
        <ui:Card Grid.Row="3" Margin="10, 0">
            <StackPanel>
                <TextBlock Text="{Binding HeadingNotEmpty}"/>
                <Separator Visibility = "Hidden" Height="10"/>
                <ui:ToggleSwitch
                    IsChecked="{Binding SkipNotEmpty}" />
            </StackPanel>
        </ui:Card>
        
        <ui:Button Grid.Row="4"
                   Appearance="Primary"
                   Content="Execute"
                   HorizontalAlignment="Center"
                   Command="{Binding ExecuteCommand}"
                   Icon="{ui:SymbolIcon EyeTracking24}"/>
    </Grid>
    
</ui:FluentWindow>
<ui:FluentWindow
    x:Class="LevelByFloor.Views.LevelByFloorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ui="http://Kapibara/xaml"
    mc:Ignorable="d"
    WindowStartupLocation="CenterScreen"
    ResizeMode="NoResize"
    Height="525"
    Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <ui:TitleBar Grid.Row="0" Title="Level by floor"/>
        <ui:Card Grid.Row="1" Margin="10, 0">
            <StackPanel>
                <TextBlock Text="Параметр"/>
                <Separator Visibility = "Hidden" Height="10"/>
                <ComboBox
                    ItemsSource="{Binding Parameters}"
                    SelectedItem="{Binding Parameter}"/>
            </StackPanel>
        </ui:Card>
        <ui:Card Grid.Row="2" Margin="10, 0">
            <StackPanel>
                <TextBlock Text="Выбрать элементы"/>
                <Separator Visibility = "Hidden" Height="10"/>
                <ComboBox
                    ItemsSource="{Binding Options}"
                    SelectedItem="{Binding Option}"
                    DisplayMemberPath="Name"/>
            </StackPanel>
        </ui:Card>
        
        <ui:Card Grid.Row="3" Margin="10, 0">
            <StackPanel>
                <TextBlock Text="Префикс/суффикс"/>
                <Separator Visibility = "Hidden" Height="10"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0" Text="{Binding Prefix}" />
                    <TextBlock Grid.Column="1" Text="номер" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <TextBox Grid.Column="2" Text="{Binding Suffix}" />
                </Grid>
            </StackPanel>
        </ui:Card>
        
        <ui:Card Grid.Row="4" Margin="10, 0">
            <StackPanel>
                <TextBlock Text="Оступ"/>
                <Separator Visibility = "Hidden" Height="10"/>
                <TextBox Text="{Binding Indent}"/>
            </StackPanel>
        </ui:Card>
        
        <ui:Button Grid.Row="5"
                   Appearance="Primary"
                   Content="Execute"
                   HorizontalAlignment="Center"
                   Command="{Binding ExecuteCommand}"
                   Icon="{ui:SymbolIcon AlignBottom32}"/>
    </Grid>
</ui:FluentWindow>
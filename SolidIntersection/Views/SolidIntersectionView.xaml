<ui:FluentWindow
    x:Class="SolidIntersection.Views.SolidIntersectionView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ui="http://Kapibara/xaml"
    mc:Ignorable="d"
    WindowStartupLocation="CenterScreen"
    Height="800"
    Width="1000">
    
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ui:TitleBar Grid.Row="0" Title="Solid intersection"/>
        
        <Grid Grid.Row="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            
            <Grid Grid.Column="0">
               <DockPanel LastChildFill="True">
                    <ui:Button 
                        DockPanel.Dock="Bottom"
                        Appearance="Primary"
                        Content="Execute"
                        HorizontalAlignment="Center"
                        Margin="0,10"
                        VerticalAlignment="Bottom"
                        Command="{Binding ExecuteCommand}" />
                    
                    <ScrollViewer>
                        <StackPanel>
                            <ui:Card Margin="10, 5">
                                <StackPanel>
                                    <ui:TextBlock
                                        Text="Модель"
                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                        TextWrapping="WrapWithOverflow"
                                        FontTypography="BodyStrong"/>
                                    <ui:TextBlock
                                        Appearance="Secondary"
                                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                        Text="выберите текущую модель или связанный файл"
                                        TextWrapping="WrapWithOverflow" />
                                    <Separator Visibility="Hidden" Height="5"/>
                                    <ComboBox
                                        ItemsSource="{Binding Projects}"
                                        SelectedItem="{Binding Project, Mode=TwoWay}"
                                        DisplayMemberPath="Name"/>
                                </StackPanel>
                            </ui:Card>
                            <ui:Card Margin="10, 5">
                                <StackPanel>
                                    <ui:TextBlock
                                        Text="Параметр"
                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                        TextWrapping="WrapWithOverflow"
                                        FontTypography="BodyStrong"/>
                                    <ui:TextBlock
                                        Appearance="Secondary"
                                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                        Text="выберите заполняемый параметр"
                                        TextWrapping="WrapWithOverflow" />
                                    <Separator Visibility="Hidden" Height="5"/>
                                    <ComboBox
                                        ItemsSource="{Binding Parameters}"
                                        SelectedItem="{Binding Parameter, Mode=TwoWay}"/>
                                </StackPanel>
                            </ui:Card>
                            
                            <ui:Card Margin="10, 5">
                                <StackPanel>
                                    <ui:TextBlock
                                        Text="Единое значение"
                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                        TextWrapping="WrapWithOverflow"
                                        FontTypography="BodyStrong"/>
                                    <ui:TextBlock
                                        Appearance="Secondary"
                                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                        Text="всем выбранным элементам"
                                        TextWrapping="WrapWithOverflow" />
                                    <Separator Visibility="Hidden" Height="5"/>
                                    <ui:ToggleSwitch 
                                        IsChecked="{Binding OneValueForEveryone, Mode=TwoWay}" />
                                </StackPanel>
                            </ui:Card>
                            
                            <ui:Card Margin="10, 5"  Visibility="{Binding ShowBorderWithValue}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="1.5*"/>
                                    </Grid.RowDefinitions>
                                    <ui:TextBlock 
                                        Grid.Row="0"
                                        Text="Значение"
                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                        TextWrapping="WrapWithOverflow"
                                        FontTypography="BodyStrong"/>
                                    
                                    <ui:TextBlock
                                        Grid.Row="1"
                                        Appearance="Secondary"
                                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                        Text="укажите значение параметра для всех элементов"
                                        TextWrapping="WrapWithOverflow" />
                                    <TextBox
                                        Grid.Row="2"
                                        Visibility="{Binding TextBoxVisibility}"
                                        Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}"/>
                                    
                                    <ui:ToggleSwitch
                                        Grid.Row="2" 
                                        Visibility="{Binding ToggleButtonVisibility}"
                                        IsChecked="{Binding ToggleButton, Mode=TwoWay}" />
                                </Grid>
                            </ui:Card>
                        </StackPanel>
                    </ScrollViewer>
               </DockPanel>
            </Grid>
            
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="110" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <ui:CardControl
                    Grid.Row="0"
                    VerticalAlignment="Top"
                    Margin="10, 5"
                    Padding="20,10,20,10"
                    Icon="{ui:SymbolIcon FilterSync24}">
                    <ui:CardControl.Header>
                        <StackPanel>
                            <ui:TextBlock
                                FontTypography="BodyStrong"
                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                Text="Фильтр"
                                TextWrapping="WrapWithOverflow" />
                            <ui:TextBlock
                                Appearance="Secondary"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                Text="Фильтр по наименованию"
                                TextWrapping="WrapWithOverflow" />
                        </StackPanel>
                    </ui:CardControl.Header>
                    <ui:TextBox
                        HorizontalAlignment="Left"
                        PlaceholderText="Введите наименование..."
                        Text="{Binding FilterByName, UpdateSourceTrigger=PropertyChanged}"/>
                </ui:CardControl>
                
                <ui:Card Grid.Row="1"  Margin="10,10"
                         VerticalAlignment="Stretch"
                         VerticalContentAlignment ="Top">
                   <Grid>
                       <Grid.RowDefinitions>
                           <RowDefinition Height="35"/> 
                           <RowDefinition Height="*"/> 
                       </Grid.RowDefinitions>
                       
                       <Grid Grid.Row="0" VerticalAlignment="Top" Margin="13,0,0,0">
                           <Grid.ColumnDefinitions>
                               <ColumnDefinition Width="50"/> 
                               <ColumnDefinition Width="*"/> 
                               <ColumnDefinition Width="*"/> 
                           </Grid.ColumnDefinitions>
                           
                           <CheckBox Grid.Column="0"
                                     IsChecked="{Binding AllItems}" />
                           
                           <ui:TextBlock Grid.Column="1"
                                         VerticalAlignment="Center"
                                         HorizontalAlignment="Center"
                                         Appearance="Secondary"
                                         Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                         Text="Наименование" />
                           <ui:TextBlock Grid.Column="2"
                                         Visibility="{Binding VisibleTextBox}"
                                         VerticalAlignment="Center"
                                         HorizontalAlignment="Center"
                                         Appearance="Secondary"
                                         Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                         Text="Значение параметра" />
                       </Grid>
                       
                       <ListBox Grid.Row="1"
                                VerticalAlignment="Top"
                                ItemsSource="{Binding ItemsList}"
                                SelectedItem="{Binding SelectedItem}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <CheckBox
                                            Grid.Column="0"
                                            IsChecked="{Binding IsChecked}" />
                                        
                                        <TextBlock
                                            Grid.Column="1"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Text="{Binding NameItem}" />
                                        
                                        <TextBox 
                                            Grid.Column="2"
                                            HorizontalAlignment="Stretch"
                                            Visibility="{Binding VisibleTextBox}"
                                            Text="{Binding Value}" />
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                       </ListBox>
                   </Grid>
                </ui:Card>
            </Grid>
        </Grid>
    </Grid>
</ui:FluentWindow>

<ui:FluentWindow
    x:Class="ExporterModels.Dialogs.AddProject.View.AddProjectView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ui="http://Kapibara/xaml"
    mc:Ignorable="d"
    WindowStartupLocation="CenterOwner"
    Height="400"
    Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <ui:TitleBar Grid.Row="0" Title="Add project" />
        <ui:Card Grid.Row="1" Margin="10">
            <StackPanel>
                <ui:TextBlock
                    Appearance="Secondary"
                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                    Text="Наименование проекта"
                    TextWrapping="WrapWithOverflow" />
                <Separator Visibility="Hidden" Height="5" />
                <ui:TextBox
                    Margin="10"
                    PlaceholderText="Укажите наименование проекта...."
                    TextWrapping="Wrap"
                    Text="{Binding ProjectName, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
        </ui:Card>

        <ui:Card Grid.Row="2" Margin="10">
            <StackPanel>
                <ui:TextBlock
                    Appearance="Secondary"
                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                    Text="Описание проекта"
                    TextWrapping="WrapWithOverflow" />
                <Separator Visibility="Hidden" Height="5" />
                <ui:TextBox
                    Margin="10"
                    PlaceholderText="Укажите описание проекта...."
                    TextWrapping="Wrap"
                    Text="{Binding ProjectDescription, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
        </ui:Card>


        <ui:InfoBar Grid.Row="3"
                    Margin="10,0"
                    Title="{Binding InfoBarService.Title}"
                    IsOpen="{Binding InfoBarService.IsOpen}"
                    Message="{Binding InfoBarService.Message}"
                    Severity="{Binding InfoBarService.Severity, Mode=OneWay}" />

        <ui:Button Grid.Row="4"
                   Margin="10"
                   IsEnabled="{Binding EnableButton}"
                   Icon="{ui:SymbolIcon ArrowCounterclockwise32}"
                   HorizontalAlignment="Center"
                   Appearance="Primary"
                   Content="Добавить проект"
                   Command="{Binding AddProjectCommand}" />
    </Grid>
</ui:FluentWindow>
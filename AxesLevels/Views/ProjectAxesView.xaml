<ui:FluentWindow
    x:Class="ProjectAxes.Views.ProjectAxesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ui="http://Kapibara/xaml"
    mc:Ignorable="d"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    Height="300"
    MinWidth="250"
    Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        
        <ui:TitleBar
            Grid.Row="0"
            Title="{Binding Title}"
            ShowMinimize="False"
            ShowMaximize="False"/>
        <ui:Card 
            Grid.Row="1" 
            Margin="10,0">
            <StackPanel>
                <ui:TextBlock
                    Text="{Binding HeaderSelections}"
                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                    TextWrapping="WrapWithOverflow"
                    FontTypography="BodyStrong"/>
                <ui:TextBlock
                    Appearance="Secondary"
                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                    Text="{Binding HeaderSelectionsDescription}"
                    TextWrapping="WrapWithOverflow" />
                <Separator Visibility="Hidden" Height="5"/>
                <ComboBox
                    ItemsSource="{Binding Options}"
                    SelectedItem="{Binding Option}" 
                    DisplayMemberPath="Name"/>
            </StackPanel>
        </ui:Card>
        
        <ui:Card 
            Grid.Row="2" 
            Margin="10,0">
            <StackPanel>
                <ui:TextBlock
                    Appearance="Secondary"
                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                    Text="{Binding SettingsDescription}"
                    TextWrapping="WrapWithOverflow" />
                <Separator Visibility="Hidden" Height="5"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <ui:TextBlock 
                            Grid.Column="0"
                            Appearance="Secondary"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="{Binding StartLabel}"/>
                        <CheckBox 
                            Grid.Column="1" 
                            IsChecked="{Binding BeginningIsChecked}"/>
                    </Grid>
                    
                    <Grid Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        
                        <ui:TextBlock 
                            Grid.Column="0"
                            Appearance="Secondary"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="{Binding EndLabel}"/>
                        <CheckBox 
                            Grid.Column="1" 
                            IsChecked="{Binding EndIsChecked}"/>
                    </Grid>
                </Grid>
            </StackPanel>
        </ui:Card>
        
        <ui:Button
            Grid.Row="3"
            Appearance="Primary"
            Content="Execute"
            HorizontalAlignment="Center"
            Command="{Binding ExecuteCommand}" />
    </Grid>
</ui:FluentWindow>